@{
    ViewData["Title"] = "Caricamento foto";
}

<div class="row" style="margin-bottom: 20px;">
    <div class="col-md-12">
        <h1>Caricamento foto</h1>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-8 col-lg-offset-2">
        <form method="post" asp-action="UploadFile" asp-controller="Home" enctype="multipart/form-data">

            <div class="alert alert-info" role="alert">
                Seleziona la foto da caricare.<br />
                Sono ammessi solamente file con estensione <strong>.jpg</strong> e <strong>.png</strong>
            </div>

            <div class="form-group">
                <input type="file" name="file" id="inputFile" />
            </div>

            <button type="submit" class="btn btn-success btn-lg">
                <span class="glyphicon glyphicon-open" aria-hidden="true"></span> Carica
            </button>

        </form>
    </div>
</div>

